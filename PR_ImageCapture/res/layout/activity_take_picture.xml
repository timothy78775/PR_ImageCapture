<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/layout_topbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:id="@+id/button_callcamera"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/get_photo"
                />
        <Button
                android:id="@+id/button_viewgallery"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/view_gallery"
                />
        <Button
                android:id="@+id/button_uploadimage"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/upload_this"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/layout_imageview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/layout_topbuttons">
        <ImageView
                android:id="@+id/photo_image"
                android:contentDescription="@string/image_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
    </LinearLayout>
</RelativeLayout>